Info3: <<
Package: libspatialite7-shlibs
Version: 4.3.0
Revision: 3
Description: Shared libraries for libspatialite7 package
License: OSI-Approved
Homepage: http://www.gaia-gis.it/spatialite/
Maintainer: BABA Yoshihiko <babayoshihiko@mac.com>
DescDetail: <<
  The SpatiaLite extension enables SQLite to support 
spatial data too [aka GEOMETRY], in a way conformant 
to OpenGIS specifications.
<<
BuildConflicts: <<
	libspatialite2,
	libspatialite5,
	libspatialite7
<<

Depends: <<
  libiconv,
  sqlite3-shlibs,
  libproj9-shlibs,
  libgeos3.5.0-shlibs,
  libfreexl1-shlibs (>=1.0.2-1)
<<
BuildDepends: <<
  fink (>= 0.28), 
  fink-package-precedence,
  libxml2, libiconv-dev,
  sqlite3-dev,
  libproj9, libgeos3.5.0,
  libfreexl1-dev (>=1.0.2-1)
<<

# Unpack Phase.

Source: http://www.gaia-gis.it/gaia-sins/libspatialite-sources/libspatialite-%v.tar.gz
Source-MD5: 59ec162d3e4db2d247945e3a943f64bc

SetCPPFLAGS: -Os -I%p/opt/libgeos3.5.0/include
SetLDFLAGS: -lcharset
ConfigureParams: <<
	--target=macosx \
	--disable-static \
	--with-geosconfig=%p/opt/libgeos3.5.0/bin/geos-config \
	--enable-dependency-tracking
<<

PatchScript: <<
  # Patch configure not to link like Puma on Yosemite
  perl -pi -e 's/(10\.\[012\])\*/\1\,.\*/' configure

  perl -pi -e "s|SUBDIRS = src test|SUBDIRS = src test #|g" Makefile.in

  perl -pi -e 's/(-version-info.*)/\1 -no-undefined/ unless /-no-undefined/' src/Makefile.in
<<

CompileScript: <<
#!/bin/sh -xe

  # Set up Libraries
  ./configure %c
  
  make
  fink-package-precedence --prohibit-bdep=libspatialite7 .
<<

# Install Phase.
InstallScript: <<
#!/bin/sh -xe
  # Install Libraries
  make install prefix=%i
<<
Shlibs: <<
  %p/lib/libspatialite.7.dylib  9.0.0 %n (>= 4.3.0-1)
<<
DocFiles: AUTHORS COPYING INSTALL README

SplitOff: <<
  Package: libspatialite7
  Description: GIS extensions and tools to SQLite
  Conflicts: <<
    libspatialite2,
    libspatialite5
  <<
  Replaces: <<
    libspatialite2,
    libspatialite5
  <<
  Depends: <<
    %N (=%v-%r)
  <<
  BuildDependsOnly: true
  Files: <<
    include
    lib/libspatialite.{dylib,la}
    lib/mod_*
    lib/pkgconfig
  <<
  DocFiles: AUTHORS COPYING INSTALL README
# End of SplitOff
<<

# End of Info3
<<
